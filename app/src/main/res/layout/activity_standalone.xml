<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  android:padding="8dp">

  <androidx.appcompat.widget.AppCompatSeekBar
    android:id="@+id/defaultSeekBar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />

  <codes.side.andcolorpicker.hsl.HSLColorPickerSeekBar
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:hslMode="hue" />

  <codes.side.andcolorpicker.hsl.HSLColorPickerSeekBar
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:hslMode="saturation" />

  <codes.side.andcolorpicker.hsl.HSLColorPickerSeekBar
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:hslMode="lightness" />

  <codes.side.andcolorpicker.lab.LABColorPickerSeekBar
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:labMode="l" />

  <codes.side.andcolorpicker.lab.LABColorPickerSeekBar
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:labMode="a" />

  <codes.side.andcolorpicker.lab.LABColorPickerSeekBar
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:labMode="b" />

  <codes.side.andcolorpicker.cmyk.CMYKColorPickerSeekBar
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cmykMode="cyan" />

  <codes.side.andcolorpicker.cmyk.CMYKColorPickerSeekBar
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cmykMode="magenta" />

  <codes.side.andcolorpicker.cmyk.CMYKColorPickerSeekBar
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cmykMode="yellow" />

  <codes.side.andcolorpicker.cmyk.CMYKColorPickerSeekBar
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cmykMode="black" />

  <codes.side.andcolorpicker.rgb.RGBColorPickerSeekBar
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:rgbMode="red" />

  <codes.side.andcolorpicker.rgb.RGBColorPickerSeekBar
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:rgbMode="green" />

  <codes.side.andcolorpicker.rgb.RGBColorPickerSeekBar
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:rgbMode="blue" />

  <codes.side.andcolorpicker.alpha.HSLAlphaColorPickerSeekBar
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />
</LinearLayout>
